/* pages/login/login.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}

.logo {
    width: 144rpx;
    height: 144rpx;
    margin: 40rpx 0;
}

.btn-login {
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 10rpx;
}

.wechat {
    background-color: #42bd55;
    color: #fff;
    margin-bottom: 30rpx;
}

.douban {
    background-color: #fff;
    color: #42bd55;
    border: 2rpx solid #42bd55;
}

.agreement {
    display: flex;
    color: #9d9d9d;
    font-size: 24rpx;
    position: absolute;
    bottom: 50rpx;
}

.agreement .open {
    color: #42bd55;
    margin-left: 10rpx;
}