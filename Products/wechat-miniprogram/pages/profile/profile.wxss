/* pages/profile/profile.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.login-wrapper {
    position: relative;
    width: 100%;
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.login-wrapper image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.login-wrapper .login {
    width: 350rpx;
    height: 100rpx;
    border-radius: 50rpx;
    background-color: #fff;
    font-size: 32rpx;
    line-height: 100rpx;
    color: #1e4826;
    text-align: center;
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, 0.2);
}

.items-wrapper {
    margin-top: 30rpx;
}

.title-wrapper {
    padding-left: 30rpx;
    padding-right: 40rpx;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
}

.title-wrapper .title {
    font-weight: bold;
}

.title-wrapper .view {
    display: flex;
    align-items: center;
    color: #838383;
}

.items-wrapper .arrow {
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #7f7f7f;
    border-left: none;
    border-bottom: none;
    transform: rotate(45deg);
    margin-left: 15rpx;
}

.item {
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 20rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.item image {
    width: 108rpx;
    height: 108rpx;
    margin-right: 30rpx;
}

.info-wrapper {
    flex-grow: 1;
    padding-right: 20rpx;
}

.info-wrapper .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info .left .top {
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.info .left .bottom {
    display: flex;
    color: #818181;
    align-items: flex-end;
}

.info .bottom .count {
    margin-right: 10rpx;
    font-size: 60rpx;
}

.info .bottom .text {
    margin-bottom: 10rpx;
}

.info .right {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
    padding-left: 26rpx;
}

.info .right .text {
    margin-right: 20rpx;
    color: #c1c1c1;
}

.info .right .begin-wrapper {
    display: flex;
    align-items: center;
}

.info .right .begin {
    color: #4a4a4a;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    padding: 10rpx 14rpx;
}

.item .divider {
    width: 100%;
    height: 2rpx;
    background-color: rgba(1, 0, 0, 0.1);
}

.version {
    margin-bottom: 40rpx;
    color: #c9c9c9;
    font-size: 24rpx;
    text-align: center;
    
}